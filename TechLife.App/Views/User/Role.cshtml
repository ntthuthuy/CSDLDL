@using TechLife.Common
@using TechLife.Model
@model PagedResult<RoleModel>

@{
    ViewData["Title"] = "Danh sách quyền";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper" style="min-height: 1363.2px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">

                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active">Hệ thống</li>
                        <li class="breadcrumb-item active">Quyền</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <form method="get" style="width:100%">
                        <div class="card card-outline card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Danh sách tài khoản</h3>
                                <div class="card-tools">
                                    <a href="/User/CreateRole/" class="btn btn-xs btn-success">
                                        <i class="fas fa-plus-circle"></i> Thêm mới
                                    </a>
                                </div>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <table class="table table-hover table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th width="5%" class="text-center">STT</th>
                                            <th width="15%" class="text-center">Quyền</th>
                                            <th>Chức năng</th>
                                            <th width="20%" class="text-center">Chức năng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            if (Model != null && Model.Items != null)
                                            {
                                                int stt = 0;
                                                foreach (var d in Model.Items)
                                                {
                                                    stt++;
                                                    <tr>
                                                        <td class="text-center">@stt</td>
                                                        <td class="text-center">@d.Name</td>
                                                        <td>@d.Description</td>
                                                        <td class="text-center">
                                                            @Html.ActionLink("Sửa", "EditRole", new { id = d.Id })
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.card-body -->
                            @{
                                if (Model.TotalRecords > Model.PageSize)
                                {
                                    <div class="card-footer">
                                        @await Component.InvokeAsync("Paging", new { page = Model })
                                    </div>
                                }
                            }
                        </div>
                        <!-- /.card -->
                    </form>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

