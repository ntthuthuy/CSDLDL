@model TechLife.Model.User.UserUpdateRequest
@using TechLife.Common
@{
    ViewData["Title"] = "Cập nhật tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6"></div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                        <li class="breadcrumb-item">Hệ thống</li>
                        <li class="breadcrumb-item">Thêm tài khoản</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-outline card-primary">
                        <form id="form" asp-controller="User" asp-action="Edit" method="post">
                            <div class="card-header">
                                <h3 class="card-title">Cập nhật tài khoản</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">

                                <div class="form-row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="control-label">Họ</label>
                                            <input asp-for="LastName" class="form-control" />
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="control-label">Tên</label>
                                            <input asp-for="FirstName" class="form-control" />
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="control-label">Căn cước công dân</label> <span class="text-danger"> *</span>
                                            <input asp-for="CanCuocCongDan" class="form-control" />
                                            <span asp-validation-for="CanCuocCongDan" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="control-label">Ngày sinh</label>
                                            <input asp-for="Dob" class="form-control" />
                                            <span asp-validation-for="Dob" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="control-label">Email</label>
                                            <input asp-for="Email" class="form-control" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="control-label">Số điện thoại</label>
                                            <input asp-for="PhoneNumber" class="form-control" />
                                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="control-label">Tài khoản</label>
                                            <input asp-for="UserName" class="form-control" disabled style="cursor: not-allowed" />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="control-label">Mật khẩu</label>
                                            <input asp-for="Password" class="form-control" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="control-label">Xác nhận mật khẩu</label>
                                            <input asp-for="ConfirmPassword" class="form-control" />
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                @* <div class="form-row">

                                    <div class="col-md-6">
                                        <div class="position-relative form-group">
                                            <label class="control-label">Vai trò</label>
                                            <select asp-for="GroupId"
                                                    class="form-control select2"
                                                    asp-items="@(new SelectList(@ViewBag.Group,"Id", "Name"))">
                                            </select>
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div> *@
                            </div>
                            <div class="card-footer">
                                <div class="float-right">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" asp-for="Id" />
                                    <button type="submit" class="btn btn-primary">Lưu</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
@await Html.PartialAsync("~/Views/Shared/_ValidationScriptsPartial.cshtml")
@section scripts
{
    <script>
        $('.select2').select2();

        $('#form').on('submit', function(e){
            e.preventDefault();
            if(!$(this).valid()) {
                toastr.error("Vui lòng nhập đầy đủ thông tin");
                return;
            }
            showLoading();
            e.target.submit();
        });
    </script>
}