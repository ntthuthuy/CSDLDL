@using TechLife.Common;
@using TechLife.Common.Enums;
@using TechLife.Model.TienNghi;
@model List<TienNghiVm>
@{
    ViewData["Title"] = ViewData["Title"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">

                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title_parent"]</li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <form method="get">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card card-outline card-primary">
                            <form>
                                <div class="card-header">
                                    <h3 class="card-title">@ViewData["Title"]</h3>
                                    <div class="card-tools">
                                        <a href="/Danhmuc/Themtiennghi/" class="btn btn-xs btn-success">
                                            <i class="fas fa-plus-circle"></i> Thêm mới
                                        </a>
                                    </div>
                                </div>
                                <!-- /.card-header -->
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label class="control-label">Ngôn ngữ</label>
                                                <select class="form-control" onchange="this.form.submit()" name="NgonNgu" asp-items="ViewBag.NgonNguOptions"></select>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label class="control-label">Lĩnh vực</label>
                                                <select class="form-control" onchange="this.form.submit()" name="linhvuc" asp-items="ViewBag.listLinhVucKinhDoanh">
                                                    <option value="0">tất cả</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <table class="table-hover table-striped table-bordered table">
                                        <thead>
                                            <tr>
                                                <th width="5%" class="text-center">STT</th>
                                                <th width="25%" class="text-center">Tên</th>
                                                <th>Lĩnh vực áp dụng</th>
                                                <th width="10%" class="text-center">Đơn vị tính</th>
                                                <th width="10%" class="text-center">Vị trí</th>
                                                <th width="15%" class="text-center">Chức năng</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                if (Model != null && Model != null)
                                                {
                                                    int stt = 0;
                                                    foreach (var d in Model)
                                                    {
                                                        stt++;
                                                        <tr>
                                                            <td class="text-center">@stt</td>
                                                            <td>@d.Ten</td>
                                                            <td>
                                                                @{
                                                                    var arr = !String.IsNullOrEmpty(d.LinhVucId) ? d.LinhVucId.Split(",") : null;
                                                                    if (arr != null)
                                                                    {
                                                                        var enumLinhVucKinhDoanh = Enum.GetValues(typeof(LinhVucKinhDoanh)).Cast<LinhVucKinhDoanh>();

                                                                        for (var i = 0; i < arr.Length; i++)
                                                                        {
                                                                            string name = enumLinhVucKinhDoanh.Contains((LinhVucKinhDoanh)Convert.ToInt32(arr[i]))
                                                                                ? StringEnum.GetStringValue(enumLinhVucKinhDoanh.First(x => (int)x == Convert.ToInt32(arr[i]))) 
                                                                                : "";
                                                                            <em>- @name</em>

                                                                            <br />
                                                                        }
                                                                    }

                                                                }
                                                            </td>
                                                            <td class="text-center">@d.DonViTinhName</td>
                                                            <td class="text-center">
                                                                <input data-id="@Model[stt - 1].Id" class="txt-vitri form-control text-right" value="@Model[stt-1].ViTri" />
                                                            </td>
                                                            <td class="text-center">
                                                                <a title="Sửa tiện nghi" href="/Danhmuc/Suatiennghi/?id=@HashUtil.EncodeID(d.Id.ToString())" class="btn btn-warning btn-xs"><i class="fas fa-edit"></i> Sửa</a>
                                                                <a title="Xóa tiện nghi" data-title="Bạn muốn xóa tiện nghi @d.Ten ?" data-url="/Danhmuc/Xoatiennghi/?id=@HashUtil.EncodeID(d.Id.ToString())" class="btn btn-danger btn-xs btn-delete"><i class="fas fa-trash"></i> Xóa</a>
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </form>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </form>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $(".txt-vitri").on("change", (function () {
                $.ajax({
                    url: '/Danhmuc/Capnhat_vitri_tiennghi',
                    type: 'POST',
                    dataType: 'json',
                    data: {
                        id: $(this).data("id"),
                        value: $(this).val()
                    },
                    success: function (data) {
                        AlertAction(data.message);
                    }
                });
            }));
        });
    </script>
}


