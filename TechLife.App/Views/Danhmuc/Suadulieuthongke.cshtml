@model TechLife.Model.DanhMucDuLieuThongKe.DanhMucDuLieuThongKeUpdateRequest

<form id="modal-form">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title text-blue">
                <strong>Cập nhật</strong>
            </h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="form-row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Code" class="control-label"></label>
                        <input asp-for="Code" class="form-control" />
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label> <span class="text-danger"> *</span>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="DVT" class="control-label"></label>
                        <input asp-for="DVT" class="form-control" />
                    </div>
                </div>
                <div class="col-md-12">
                    <label class="control-label">Thuộc danh mục gốc</label>
                    <select class="form-control select2" asp-for="ParentId" asp-items="ViewBag.Options">
                        <option value="">-Gốc-</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="modal-footer float-right">
            <input type="hidden" asp-for="Id" />
            @Html.AntiForgeryToken()
            <button type="button" class="btn btn-danger" data-dismiss="modal" aria-label="Close">
                Hủy
            </button>
            <button type="submit" class="btn btn-success">Xác nhận</button>
        </div>
    </div>
</form>
<script src="@(Context.Request.PathBase)/plugins/jquery-validation/jquery.validate.min.js"></script>
<script src="@(Context.Request.PathBase)/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script>
    defaultConfig(document.querySelector('#modal-form'));
    $('#modal-form').on('submit', function(e) {
        e.preventDefault();
        $(this).addClass('was-validated')
        if(!$(this).valid()) {
            showNotification({isSuccessed: false, message: "Vui lòng nhập đầy đủ thông tin"})
            return;
        }else {
            let formData = new FormData(this);
            showLoading();
            $.ajax({
                url: '/Danhmuc/Suadulieuthongke',
                type: 'POST',
                data: formData,
                contentType: false,
                processData: false,
                success: function(data) {
                    hideLoading();
                    if (data.isSuccessed) {
                        dropModal();
                        showNotification(data);
                        let element = document.getElementById('view-content');
                        let params = window.location.search;
                        loadContent(`/Danhmuc/Dulieuthongkelist/${params}`, element);
                    }else {
                        showNotification(data);
                    }
                },
                error: function(xhr) {
                    hideLoading();
                    showNotification({ isSuccessed: false, message: xhr.responseText });
                }
            })
        }
    })
</script>