@using TechLife.Common;
@using TechLife.Model.DuLieuDuLich;
@model PagedResult<TimKiemDuLieuDiemDuLichVrm>

@{
    ViewData["Title"] = ViewData["Title"];
    ViewData["searchUrl"] = "/Thongke/TimkiemDuLieuDiemDuLich";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@using TechLife.Common.Enums;
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <form id="form" method="get" asp-action="Index">
                        <div class="position-relative form-group">
                            <select class="form-control" name="Id" id="Id" asp-items="ViewBag.ListLoaiThongKe">
                                <option value="">Chọn loại thống kê</option>
                            </select>
                        </div>
                    </form>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title_parent"]</li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-outline card-primary">
                        <form method="get" style="width:100%">
                            <div class="card-header">
                                <h3 class="card-title">@ViewData["Title"]</h3>
                                <div class="col-sm-6">
                                </div><!-- /.col -->
                                <div class="float-right" style="padding:3px;">
                                    <button type="button" title="Tìm kiếm" data-url="@Context.Request.GetRawUrl("/ThongKe/SearchDiemDuLich/")"  data-toggle="modal" data-target="#modal" class="btn btn-success popup"><i class="fas fa-search"></i> Nhiều hơn</button>
                                </div>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">

                                <table class="table table-hover table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th width="5%" class="text-center">STT</th>
                                            <th width="15%" class="text-center">Tên</th>
                                            <th width="10%" class="text-center">Loại hình</th>
                                            <th width="10%" class="text-center">Số điện thoại</th>
                                            <th width="10%" class="text-center">Số giấy phép</th>
                                            <th width="10%" class="text-center">Thời điểm bắt đầu kinh doanh</th>
                                            <th width="10%" class="text-center">Diện tích</th>
                                            <th width="10%" class="text-center">Địa chỉ</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            if (Model != null && Model.Items != null)
                                            {
                                                int stt = 0;

                                                foreach (var d in Model.Items)
                                                {
                                                    stt++;

                                                    <tr>
                                                        <td class="text-center">@stt</td>
                                                        <td>@d.Ten</td>
                                                        <td class="text-center">@d.TenDanhMuc</td>
                                                        <td class="text-center">@d.SoDienThoai</td>
                                                        <td class="text-center">@d.SoGiayPhep</td>
                                                        <td class="text-center">@Functions.GetDatetimeToVn(@d.ThoiDiemBatDauKinhDoanh)</td>
                                                        <td class="text-center">@d.DienTichMatBang m2</td>
                                                        <td>@d.DiaChi</td>
                                                    </tr>

                                                }
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="card-footer">

                            </div>                            
                        </form>

                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $("#Id").off("change").on("change", function () {
                document.getElementById('form').submit();
            });
        })
    </script>
}