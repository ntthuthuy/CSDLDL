@using TechLife.Common;
@using TechLife.Common.Enums;
@using TechLife.Model.DuLieuDuLich;
@using Microsoft.AspNetCore.Mvc.Rendering;
@model DuLieuDuLichUpdateRequest
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration;
@{
    ViewData["Title"] = ViewData["Title"];
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<style>
    #mapgg {
        margin: 0 auto;
        width: 100%;
        height: 100px;
    }

    .custom-file-input {
        height: 100% !important
    }

    .add-images:hover {
        box-shadow: 5px 5px rgba(0, 0, 0, 0.05) !important;
    }
</style>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">

                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title_parent"]</li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-outline card-primary">
                        <form method="post" asp-action="Suathongtinnhahang" enctype="multipart/form-data">
                            <div class="card-header">
                                <h3 class="card-title">@ViewData["Title"]</h3>
                                <div class="card-tools">
                                    <a href="@Context.Request.GetBackUrl()" class="btn btn-xs btn-outline-danger">
                                        <i class="fas fa-arrow-circle-left"></i> Quay lại
                                    </a>
                                </div>
                            </div>
                            <div class="card-body">
                                <input type="hidden" asp-for="DuLieuDuLich.LinhVucKinhDoanhId" value="@Convert.ToInt32(LinhVucKinhDoanh.NhaHang)" />
                                <input type="hidden" asp-for="DuLieuDuLich.Id" />
                                <div class="col-sm-12">
                                    <div class="card card-primary card-outline card-outline-tabs">
                                        <div class="card-header p-0 border-bottom-0">
                                            <ul class="nav nav-tabs" id="custom-tabs-four-tab" role="tablist">
                                                <li class="nav-item">
                                                    <a class="nav-link active" id="custom-tabs-four-home-tab" data-toggle="pill" href="#custom-tabs-four-home" role="tab" aria-controls="custom-tabs-four-home" aria-selected="true">Thông tin chung</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link" id="custom-tabs-four-home-tab" data-toggle="pill" href="#custom-tabs-four-tiennghi" role="tab" aria-controls="custom-tabs-four-tiennghi" aria-selected="true">Dịch vụ bổ sung</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link" id="custom-tabs-four-content-tab" data-toggle="pill" href="#custom-tabs-four-content" role="tab" aria-controls="custom-tabs-four-content" aria-selected="true">Bài viết quảng bá</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link" id="custom-tabs-four-profile-tab" data-toggle="pill" href="#custom-tabs-four-profile" role="tab" aria-controls="custom-tabs-four-profile" aria-selected="false">Bảng giá thực đơn</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link" id="custom-tabs-four-messages-tab" data-toggle="pill" href="#custom-tabs-four-messages" role="tab" aria-controls="custom-tabs-four-messages" aria-selected="false">Thông tin lao động</a>
                                                </li>
                                               
                                            </ul>
                                        </div>
                                        <div class="card-body">
                                            <div class="tab-content" id="custom-tabs-four-tabContent">
                                                <!-- Thông tin hồ sơ -->
                                                <div class="tab-pane fade active show" id="custom-tabs-four-home" role="tabpanel" aria-labelledby="custom-tabs-four-home-tab">

                                                    <div class="form-row">
                                                        <div class="col-md-6">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Tên nhà hàng <span class="text-red">*</span></label>
                                                                <input asp-for="DuLieuDuLich.Ten" class="form-control" />
                                                                <span asp-validation-for="DuLieuDuLich.Ten" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Tên viết tắt</label>
                                                                <input asp-for="DuLieuDuLich.TenVietTat" class="form-control" />
                                                                <span asp-validation-for="DuLieuDuLich.TenVietTat" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Loại nhà hàng <span class="text-red">*</span></label>
                                                                <select class="form-control" asp-for="DuLieuDuLich.LoaiHinhId" asp-items="ViewBag.listLoaiNhaHang">
                                                                    <option value="0">Chọn</option>
                                                                </select>
                                                                <span asp-validation-for="DuLieuDuLich.LoaiHinhId" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-row">
                                                        <div class="col-md-2">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Số nhà</label>
                                                                <input asp-for="DuLieuDuLich.SoNha" class="form-control" />
                                                                <span asp-validation-for="DuLieuDuLich.SoNha" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Đường phố</label>
                                                                <input asp-for="DuLieuDuLich.DuongPho" class="form-control" />
                                                                <span asp-validation-for="DuLieuDuLich.DuongPho" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Quận/ huyện/ thị xã <span class="text-red">*</span></label>

                                                                <select class="form-control option-huyen" asp-for="DuLieuDuLich.QuanHuyenId" asp-items="ViewBag.listHuyen">
                                                                    <option value="0">Chọn</option>
                                                                </select>
                                                                <span asp-validation-for="DuLieuDuLich.QuanHuyenId" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Xã/ phường/ thị trấn </label>
                                                                <select class="form-control option-xa" asp-for="DuLieuDuLich.PhuongXaId" asp-items="ViewBag.listXa">
                                                                    <option value="0">Chọn</option>
                                                                </select>
                                                                <span asp-validation-for="DuLieuDuLich.PhuongXaId" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-row">
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Số điện thoại</label>
                                                                <input asp-for="DuLieuDuLich.SoDienThoai" class="form-control" />
                                                                <span asp-validation-for="DuLieuDuLich.SoDienThoai" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Fax</label>
                                                                <input asp-for="DuLieuDuLich.Fax" class="form-control" />
                                                                <span asp-validation-for="DuLieuDuLich.Fax" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Email</label>
                                                                <input asp-for="DuLieuDuLich.Email" class="form-control" />
                                                                <span asp-validation-for="DuLieuDuLich.Email" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Website</label>
                                                                <input asp-for="DuLieuDuLich.Website" class="form-control" />
                                                                <span asp-validation-for="DuLieuDuLich.Website" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <hr />
                                                    <div class="form-row">
                                                        <div class="col-md-6">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Công ty, đơn vị chủ quản </label>
                                                                <select asp-for="DuLieuDuLich.NhaCungCapId" asp-items="ViewBag.listNhaCungCap" class="form-control ">
                                                                    <option value="0">Chọn</option>
                                                                </select>
                                                                <span asp-validation-for="DuLieuDuLich.NhaCungCapId" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-row">
                                                        <div class="col-md-6">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Họ và tên (Người đại diện)</label>
                                                                <input asp-for="DuLieuDuLich.HoTenNguoiDaiDien" class="form-control" />
                                                                <span asp-validation-for="DuLieuDuLich.HoTenNguoiDaiDien" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Chức vụ</label>
                                                                <input asp-for="DuLieuDuLich.ChucVuNguoiDaiDien" class="form-control" />
                                                                <span asp-validation-for="DuLieuDuLich.ChucVuNguoiDaiDien" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Số điện thoại</label>
                                                                <input asp-for="DuLieuDuLich.SoDienThoaiNguoiDaiDien" class="form-control" />
                                                                <span asp-validation-for="DuLieuDuLich.SoDienThoaiNguoiDaiDien" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-row">
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Số GPDK kinh doanh</label>
                                                                <input asp-for="DuLieuDuLich.SoGiayPhep" class="form-control" />
                                                                <span asp-validation-for="DuLieuDuLich.SoGiayPhep" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Thời điểm bắt đầu kinh doanh</label>
                                                                <input asp-for="DuLieuDuLich.ThoiDiemBatDauKinhDoanh" class="form-control" />
                                                                <span asp-validation-for="DuLieuDuLich.ThoiDiemBatDauKinhDoanh" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Số lần chuyển chủ</label>
                                                                <input asp-for="DuLieuDuLich.SoLanChuyenChu" type="number" class="form-control" />
                                                                <span asp-validation-for="DuLieuDuLich.SoLanChuyenChu" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <hr />
                                                    <div class="form-row">
                                                        <div class="col-md-3">
                                                            <label class="control-label"></label>
                                                            <div class="form-check">
                                                                <input input asp-for="DuLieuDuLich.IsDatChuan" type="checkbox" class="form-check-input" id="exampleCheck1">
                                                                <label class="form-check-label" for="exampleCheck1"><strong>Cơ sở đạt chuẩn</strong></label>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Số VB đạt chuẩn</label>
                                                                <input asp-for="DuLieuDuLich.SoCVDatChuan" class="form-control" />
                                                                <span asp-validation-for="DuLieuDuLich.SoCVDatChuan" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Ngày công nhận</label>
                                                                <input asp-for="DuLieuDuLich.NgayCVDatChuan" class="form-control" />
                                                                <span asp-validation-for="DuLieuDuLich.NgayCVDatChuan" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <hr />
                                                    <div class="form-row">
                                                        <div class="col-md-6">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Tổng số vốn đầu tư ban đầu (1000 VNĐ)</label>
                                                                <input asp-for="DuLieuDuLich.TongVonDauTuBanDau" class="form-control text-right" />
                                                                <span asp-validation-for="DuLieuDuLich.TongVonDauTuBanDau" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Tổng số vốn đầu tư bổ sung</label>
                                                                <input asp-for="DuLieuDuLich.TongVonDauTuBanDau" class="form-control text-right" />
                                                                <span asp-validation-for="DuLieuDuLich.TongVonDauTuBanDau" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-row">
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Diện tích mặt bằng (m2)</label>
                                                                <input asp-for="DuLieuDuLich.DienTichMatBang" class="form-control text-right" />
                                                                <span asp-validation-for="DuLieuDuLich.DienTichMatBang" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Diện tích mặt bằng xây dựng (m2)</label>
                                                                <input asp-for="DuLieuDuLich.DienTichMatBangXayDung" class="form-control text-right" />
                                                                <span asp-validation-for="DuLieuDuLich.DienTichMatBangXayDung" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Số tầng</label>
                                                                <input asp-for="DuLieuDuLich.SoTang" class="form-control text-right" />
                                                                <span asp-validation-for="DuLieuDuLich.SoTang" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Tổng diện tích xây dựng (m2)</label>
                                                                <input asp-for="DuLieuDuLich.DienTichXayDung" class="form-control text-right" />
                                                                <span asp-validation-for="DuLieuDuLich.DienTichXayDung" class="text-danger"></span>
                                                            </div>
                                                        </div>

                                                    </div>
                                                    @if (Model.DuLieuDuLich.DSVanBan != null && Model.DuLieuDuLich.DSVanBan.Count > 0)
                                                    {
                                                        <label class="control-label">Hồ sơ gồm có:</label>
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <table class="table table-bordered">
                                                                    <thead>
                                                                        <tr>
                                                                            <th class="tcenter" width="15%"></th>
                                                                            <th>Tên gọi</th>
                                                                            <th width="30%" class="tcenter">File</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        @for (int i = 0; i < Model.DuLieuDuLich.DSVanBan.Count; i++)
                                                                        {
                                                                            <tr>
                                                                                <td class="tcenter">
                                                                                    <input type="checkbox" asp-for="@Model.DuLieuDuLich.DSVanBan[i].IsStatus" />
                                                                                </td>
                                                                                <td>
                                                                                    <input hidden class="form-control" type="text" asp-for="@Model.DuLieuDuLich.DSVanBan[i].GiayPhepId" />
                                                                                    <input hidden class="form-control" type="text" asp-for="@Model.DuLieuDuLich.DSVanBan[i].TenGoi" />
                                                                                    @Model.DuLieuDuLich.DSVanBan[i].TenGoi
                                                                                </td>

                                                                                <td class="tcenter">
                                                                                    <div class="input-group">
                                                                                        <div class="custom-file">
                                                                                            <input asp-for="@Model.DuLieuDuLich.DSVanBan[i].Files" class="custom-file-input" id="customFile">
                                                                                            <label class="custom-file-label" for="customFile"></label>
                                                                                        </div>
                                                                                    </div>
                                                                                </td>
                                                                            </tr>
                                                                        }
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                            <!-- /.col -->
                                                        </div>

                                                    }

                                                </div>
                                                <!-- Thông tin tiện nghi -->
                                                <div class="tab-pane fade" id="custom-tabs-four-tiennghi" role="tabpanel" aria-labelledby="custom-tabs-four-profile-tab">
                                                    @{
                                                        if (Model.DuLieuDuLich.DSTienNghi != null)
                                                        {
                                                            <table class="table table-condensed table-bordered">
                                                                <thead>
                                                                    <tr>
                                                                        <th class="text-center" width="5%"><label><input class="ckAll" type="checkbox" /></label></th>
                                                                        <th>Tiện nghi</th>
                                                                        <th class="text-center" width="10%">Phụ phí</th>
                                                                        <th class="text-center" width="15%">Đơn giá</th>
                                                                        <th class="text-center" width="15%">Quy mô/Số lượng</th>
                                                                        <th class="text-center" width="15%">Đơn vị tính</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @{
                                                                        int count = 0;
                                                                        for (int i = 0; i < Model.DuLieuDuLich.DSTienNghi.Count; i++)
                                                                        {
                                                                            count++;
                                                                            <tr>
                                                                                <td class="text-center"><label><input asp-for="@Model.DuLieuDuLich.DSTienNghi[i].IsSuDung" type="checkbox" class="ckTienNghiID" /></label></td>
                                                                                <td>
                                                                                    @Model.DuLieuDuLich.DSTienNghi[i].TienNghi.Ten
                                                                                    <input type="hidden" asp-for="@Model.DuLieuDuLich.DSTienNghi[i].TienNghi.Id" class="form-control text-right" />
                                                                                    <input type="hidden" asp-for="@Model.DuLieuDuLich.DSTienNghi[i].TienNghi.Ten" class="form-control text-right" />
                                                                                </td>
                                                       
                                                                                <td class="text-center"><label><input asp-for="@Model.DuLieuDuLich.DSTienNghi[i].IsPhuPhi" type="checkbox" /></label></td>
                                                                                <td class="text-center"><input asp-for="@Model.DuLieuDuLich.DSTienNghi[i].DonGia" class="form-control text-right" /></td>
                                                                                <td class="text-center"><input asp-for="@Model.DuLieuDuLich.DSTienNghi[i].SoLuong" class="form-control text-right" type="number" /></td>
                                                                                <td><select asp-for="@Model.DuLieuDuLich.DSTienNghi[i].TienNghi.DonViTinhId" class="form-control" asp-items="ViewBag.listDonViTinh"></select></td>
                                                                            </tr>
                                                                        }
                                                                    }

                                                                </tbody>
                                                            </table>

                                                        }
                                                    }
                                                </div>
                                                <div class="tab-pane fade" id="custom-tabs-four-content" role="tabpanel" aria-labelledby="custom-tabs-four-content-tab">
                                                    <div class="row">
                                                        <div class="col-md-12">
                                                            <div class="box box-">
                                                                <div class="box-body">
                                                                    <div class="row">
                                                                        <div class="col-md-12">
                                                                            <div class="form-group">
                                                                                <textarea asp-for="DuLieuDuLich.GioiThieu" class="form-control"></textarea>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- Thông tin giá thực đơn -->
                                               
                                                <div class="tab-pane fade" id="custom-tabs-four-profile" role="tabpanel" aria-labelledby="custom-tabs-four-profile-tab">
                                                    @{
                                                        if (Model.DuLieuDuLich.DSThucDon != null)
                                                        {
                                                            <table class="table table-condensed table-bordered table-responsive">
                                                                <thead>
                                                                    <tr>
                                                                        <th>Tên</th>
                                                                        <th width="20%">Đơn giá</th>
                                                                        <th width="40%">Menu</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody id="new-row">
                                                                    @{
                                                                        for (int i = 0; i < Model.DuLieuDuLich.DSThucDon.Count(); i++)
                                                                        {
                                                                            <tr>
                                                                                <td style="vertical-align: middle;">
                                                                                    <input type="hidden" asp-for="@Model.DuLieuDuLich.DSThucDon[i].Id" class="form-control text-right" />
                                                                                    <input asp-for="@Model.DuLieuDuLich.DSThucDon[i].TenThucDon" class="form-control" />
                                                                                </td>
                                                                                <td style="vertical-align: middle;">
                                                                                    <input asp-for="@Model.DuLieuDuLich.DSThucDon[i].DonGia" class="form-control text-right" />
                                                                                </td>
                                                                                <td>
                                                                                    <textarea rows="3" asp-for="@Model.DuLieuDuLich.DSThucDon[i].MoTa" class="form-control"></textarea>
                                                                                </td>
                                                                            </tr>
                                                                        }
                                                                    }

                                                                </tbody>
                                                                <tbody>
                                                                    <tr>
                                                                        <td colspan="3" class="text-right">
                                                                            <input type="hidden" id="rownum" value="@Convert.ToInt32(Model.DuLieuDuLich.DSThucDon.Count()-1)" />
                                                                            <button type="button" class="btn btn-success add-rows">Thêm dòng</button>
                                                                        </td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>
