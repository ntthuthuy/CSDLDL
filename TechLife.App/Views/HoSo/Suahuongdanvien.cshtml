@using TechLife.Common;
@using TechLife.Model.HuongDanVien;
@model HuongDanVienRequest
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration;
@{
    ViewData["Title"] = ViewData["Title"];
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">

                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title_parent"]</li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-outline card-primary">
                        <form asp-action="Suahuongdanvien" enctype="multipart/form-data">

                            <div class="card-header">
                                <h3 class="card-title">@ViewData["Title"]</h3>
                            </div>
                            <div class="card-body">
                                @Html.ValidationSummary()
                                <div class="col-sm-12">
                                    <div class="card card-primary card-outline card-outline-tabs">
                                        <div class="card-header p-0 border-bottom-0">
                                            <ul class="nav nav-tabs" id="custom-tabs-four-tab" role="tablist">
                                                <li class="nav-item">
                                                    <a class="nav-link active" id="custom-tabs-four-home-tab" data-toggle="pill" href="#custom-tabs-four-home" role="tab" aria-controls="custom-tabs-four-home" aria-selected="true">Thông tin</a>
                                                </li>
                                                <li class="nav-item">
                                                    <a class="nav-link" id="custom-tabs-four-profile-tab" data-toggle="pill" href="#custom-tabs-four-profile" role="tab" aria-controls="custom-tabs-four-profile" aria-selected="false">Quá trình hoạt động</a>
                                                </li>
                                            </ul>
                                        </div>
                                        <div class="card-body">
                                            <div class="tab-content" id="custom-tabs-four-tabContent">
                                                <div class="tab-pane fade active show" id="custom-tabs-four-home" role="tabpanel" aria-labelledby="custom-tabs-four-home-tab">
                                                    <div class="form-row">

                                                        <div class="col-md-6">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Họ và tên</label>
                                                                <input asp-for="HuongDanVien.HoVaTen" class="form-control" />
                                                                <span asp-validation-for="HuongDanVien.HoVaTen" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Ngày sinh</label>
                                                                <input asp-for="HuongDanVien.NgaySinh" class="form-control" />
                                                                <span asp-validation-for="HuongDanVien.NgaySinh" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Ngoại ngữ</label>
                                                                <select multiple class="form-control select2" asp-for="HuongDanVien.NgonNguId" asp-items="ViewBag.listNgoaiNgu">
                                                                </select>
                                                                <span asp-validation-for="HuongDanVien.NgonNguId" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Loại hình</label>
                                                                <select multiple class="form-control select2" asp-for="HuongDanVien.LoaiHinhId" asp-items="ViewBag.listLoaiDDL">
                                                                </select>
                                                                <span asp-validation-for="HuongDanVien.LoaiHinhId" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Công ty lữ hành</label>
                                                                <select class="form-control select2" asp-for="HuongDanVien.CongTyLuHanhId" asp-items="ViewBag.listCongTyLuHanh">
                                                                    <option value="0">Chọn</option>
                                                                </select>
                                                                <span asp-validation-for="HuongDanVien.CongTyLuHanhId" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-row">
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Ảnh</label>
                                                                <input asp-for="Images.Images[0]" class="form-control" />
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3"></div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Số CMND, CCCD</label>
                                                                <input asp-for="HuongDanVien.CMND" class="form-control" />
                                                                <span asp-validation-for="HuongDanVien.CMND" class="text-danger"></span>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Ngày cấp</label>
                                                                <input asp-for="HuongDanVien.NgayCapCMND" class="form-control" />
                                                                <span asp-validation-for="HuongDanVien.NgayCapCMND" class="text-danger"></span>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-6">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Nơi cấp</label>
                                                                <input asp-for="HuongDanVien.NoiCapCMND" class="form-control" />
                                                                <span asp-validation-for="HuongDanVien.NoiCapCMND" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-row">
                                                        <div class="col-md-6">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Địa chỉ</label>
                                                                <input asp-for="HuongDanVien.DiaChi" class="form-control" />
                                                                <span asp-validation-for="HuongDanVien.DiaChi" class="text-danger"></span>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-6">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Hộ khẩu thường trú</label>
                                                                <input asp-for="HuongDanVien.HoKhau" class="form-control" />
                                                                <span asp-validation-for="HuongDanVien.HoKhau" class="text-danger"></span>
                                                            </div>
                                                        </div>

                                                    </div>
                                                    <div class="form-row">
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Số điện thoại</label>
                                                                <input asp-for="HuongDanVien.SoDienThoai" class="form-control" />
                                                                <span asp-validation-for="HuongDanVien.SoDienThoai" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Email</label>
                                                                <input asp-for="HuongDanVien.Email" class="form-control" />
                                                                <span asp-validation-for="HuongDanVien.Email" class="text-danger"></span>
                                                            </div>
                                                        </div>

                                                    </div>
                                                    <hr />
                                                    <div class="form-row">
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Loại thẻ</label>
                                                                <select class="form-control select2" asp-for="HuongDanVien.LoaiTheId" asp-items="ViewBag.listLoaiThe">
                                                                </select>
                                                                <span asp-validation-for="HuongDanVien.LoaiTheId" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Mã số thẻ</label>
                                                                <input asp-for="HuongDanVien.SoTheHDV" class="form-control" />
                                                                <span asp-validation-for="HuongDanVien.SoTheHDV" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Ngày cấp</label>
                                                                <input asp-for="HuongDanVien.NgayCapThe" class="form-control" />
                                                                <span asp-validation-for="HuongDanVien.NgayCapThe" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Nơi cấp</label>
                                                                <input asp-for="HuongDanVien.NoiCapThe" class="form-control" />
                                                                <span asp-validation-for="HuongDanVien.NoiCapThe" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Ngày hết hạn</label>
                                                                <input asp-for="HuongDanVien.NgayHetHan" class="form-control" />
                                                                <span asp-validation-for="HuongDanVien.NgayCapThe" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    @if (Model.HuongDanVien.DSVanBan != null && Model.HuongDanVien.DSVanBan.Count > 0)
                                                    {

                                                        <div class="form-row">
                                                            <label class="control-label">Danh sách chứng chỉ, giấy phép</label>
                                                            <div class="col-md-12">
                                                                <table class="table table-bordered">
                                                                    <thead>
                                                                        <tr>
                                                                            <th width="10%"></th>
                                                                            <th width="70%">Tên gọi</th>
                                                                            <th class="tcenter">File</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        @for (int i = 0; i < Model.HuongDanVien.DSVanBan.Count; i++)
                                                                        {
                                                                        <tr>
                                                                            <td class="tcenter">
                                                                                <input type="checkbox" asp-for="@Model.HuongDanVien.DSVanBan[i].IsStatus" />
                                                                            </td>
                                                                            <td>
                                                                                <input hidden class="form-control" type="text" asp-for="@Model.HuongDanVien.DSVanBan[i].GiayPhepId" />
                                                                                <input hidden class="form-control" type="text" asp-for="@Model.HuongDanVien.DSVanBan[i].TenGoi" />
                                                                                @Model.HuongDanVien.DSVanBan[i].TenGoi
                                                                            </td>
                                                                            <td>
                                                                                @if (!String.IsNullOrEmpty(Model.HuongDanVien.DSVanBan[i].FilePath))
                                                                                {
                                                                                    <span>
                                                                                        <a title="Xóa file" href="javasctipt:void(0)" data-title="Bạn muốn xóa file này" data-url="/Hoso/Xoafile_vanban/?id=@Model.HuongDanVien.DSVanBan[i].Id" class="btn-delete text-red"><i class="fa fa-trash-alt"></i></a>
                                                                                        <a href="@(Configuration["BaseAddress"]+Model.HuongDanVien.DSVanBan[i].FilePath)">@Model.HuongDanVien.DSVanBan[i].FileName</a>
                                                                                    </span>
                                                                                    <br />
                                                                                }

                                                                                <div class="input-group">
                                                                                    <div class="custom-file">
                                                                                        <input asp-for="@Model.HuongDanVien.DSVanBan[i].Files" class="custom-file-input" id="customFile">
                                                                                        <label class="custom-file-label" for="customFile"></label>
                                                                                    </div>

                                                                                    <input hidden class="form-control" type="text" asp-for="@Model.HuongDanVien.DSVanBan[i].FileName" />
                                                                                    <input hidden class="form-control" type="text" asp-for="@Model.HuongDanVien.DSVanBan[i].FilePath" />
                                                                                </div>

                                                                            </td>
                                                                        </tr>
                                                                        }
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                            <!-- /.col -->
                                                        </div>

                                                    }
                                                </div>
                                                <!-- Thông tin quá trình hoặc động -->
                                                <div class="tab-pane fade" id="custom-tabs-four-profile" role="tabpanel" aria-labelledby="custom-tabs-four-profile-tab">
                                                    @{
                                                        if (Model.HuongDanVien.DSQuaTrinhHD != null)
                                                        {
                                                        <table class="table table-condensed table-bordered">
                                                            <thead>
                                                                <tr>
                                                                    <th width="30%">Thời gian</th>
                                                                    <th width="40%">Tên</th>
                                                                    <th width="30%">Mô tả</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody id="new-row">
                                                                @{
                                                                        for (int i = 0; i < Model.HuongDanVien.DSQuaTrinhHD.Count(); i++)
                                                                        {
                                                                    <tr>
                                                                        <td style="vertical-align: middle;">
                                                                            <div class="input-group">
                                                                                <div class="input-group-prepend">
                                                                                    <span class="input-group-text">
                                                                                        <i class="far fa-calendar-alt"></i>
                                                                                    </span>
                                                                                </div>
                                                                                <input asp-for="@Model.HuongDanVien.DSQuaTrinhHD[i].ThoiGian" class="form-control float-right reservation">
                                                                            </div>
                                                                        </td>
                                                                        <td style="vertical-align: middle;">
                                                                            <input type="hidden" asp-for="@Model.HuongDanVien.DSQuaTrinhHD[i].Id" class="form-control text-right" />
                                                                            <input asp-for="@Model.HuongDanVien.DSQuaTrinhHD[i].HoatDong" class="form-control" />
                                                                        </td>

                                                                        <td>
                                                                            <textarea rows="3" asp-for="@Model.HuongDanVien.DSQuaTrinhHD[i].KetQua" class="form-control"></textarea>
                                                                        </td>
                                                                    </tr>
                                                                        }
                                                                }

                                                            </tbody>
                                                            <tbody>
                                                                <tr>
                                                                    <td colspan="3" class="text-right">
                                                                        <input type="hidden" id="rownum" value="@Convert.ToInt32(Model.HuongDanVien.DSQuaTrinhHD.Count()-1)" />
                                                                        <button type="button" class="btn btn-success add-rows">Thêm dòng</button>
                                                                    </td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                        }
                                                        else
                                                        {
                                                        <table class="table table-condensed table-bordered table-responsive">
                                                            <thead>
                                                                <tr>
                                                                    <th>Tên</th>
                                                                    <th width="20%">Thời gian</th>
                                                                    <th width="40%">Mô tả</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody id="new-row">
                                                                @{
                                                                        int i = 0;
                                                                    <tr>
                                                                        <td style="vertical-align: middle;">
                                                                            <input type="hidden" asp-for="@Model.HuongDanVien.DSQuaTrinhHD[i].Id" class="form-control text-right" />
                                                                            <input asp-for="@Model.HuongDanVien.DSQuaTrinhHD[i].HoatDong" class="form-control" />
                                                                        </td>
                                                                        <td style="vertical-align: middle;">
                                                                            <div class="input-group">
                                                                                <div class="input-group-prepend">
                                                                                    <span class="input-group-text">
                                                                                        <i class="far fa-calendar-alt"></i>
                                                                                    </span>
                                                                                </div>
                                                                                <input asp-for="@Model.HuongDanVien.DSQuaTrinhHD[i].ThoiGian" class="form-control float-right reservation">
                                                                            </div>
                                                                        </td>
                                                                        <td>
                                                                            <textarea rows="3" asp-for="@Model.HuongDanVien.DSQuaTrinhHD[i].KetQua" class="form-control"></textarea>
                                                                        </td>
                                                                    </tr>
                                                                }

                                                            </tbody>
                                                            <tbody>
                                                                <tr>
                                                                    <td colspan="3" class="text-right">
                                                                        <input type="hidden" id="rownum" value="@Convert.ToInt32(Model.HuongDanVien.DSQuaTrinhHD.Count()-1)" />
                                                                        <button type="button" class="btn btn-success add-rows">Thêm dòng</button>
                                                                    </td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                        }
                                                    }
                                                </div>

                                            </div>
                                        </div>
                                        <!-- /.card -->
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="float-right">
                                    <input type="hidden" asp-for="HuongDanVien.Id" />
                                    <button type="submit" class="btn btn-primary">Lưu</button>
                                </div>
                            </div>
                            <!-- /.card-body -->
                        </form>
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
@section scripts
{
    <script>
        $('.select2').select2()
        $('.reservation').daterangepicker()


        $(document).ready(function () {
            $(".upload-image").off("change").on("change", (function () {
                if (this.files && this.files[0]) {
                    var reader = new FileReader();
                    var number = $(this).data("id");
                    reader.onload = imageIsLoaded.bind(reader, number);
                    reader.readAsDataURL(this.files[0]);
                }
            }));

            $(".add-rows").off("click").on("click", function () {
                var numCurent = parseInt($("#rownum").val()) + 1;

                var htmlAddCollum = '<tr><td style="vertical-align: middle;"><div class="input-group"><div class="input-group-prepend"><span class="input-group-text"><i class="far fa-calendar-alt"></i></span></div><input class="form-control float-right reservation" type="text" id="HuongDanVien_DSQuaTrinhHD_' + numCurent
                    + '__ThoiGian" name="HuongDanVien.DSQuaTrinhHD[' + numCurent
                    + '].ThoiGian" value=""></div></td><td style="vertical-align: middle;"><input type="hidden" class="form-control text-right" data-val="true" data-val-required="The Id field is required." id="HuongDanVien_DSQuaTrinhHD_' + numCurent
                    + '__Id" name="HuongDanVien.DSQuaTrinhHD[' + numCurent
                    + '].Id" value="0"><input class="form-control" type="text" id="HuongDanVien_DSQuaTrinhHD_' + numCurent
                    + '__HoatDong" name="HuongDanVien.DSQuaTrinhHD[' + numCurent
                    + '].HoatDong" value=""></td><td><textarea rows="3" class="form-control" id="HuongDanVien_DSQuaTrinhHD_' + numCurent
                    + '__KetQua" name="HuongDanVien.DSQuaTrinhHD[' + numCurent
                    + '].KetQua"></textarea></td></tr>';

                $("#new-row").append(htmlAddCollum);
                $("#rownum").val(numCurent);
                $('.reservation').daterangepicker();
            });
        });
    </script>
}
