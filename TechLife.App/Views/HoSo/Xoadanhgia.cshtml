@model TechLife.Model.DanhGiaModel
<div class="modal-content">
    <form method="post" action="/HoSo/Xoadanhgia/">
        <div class="modal-header">
            <h4 class="modal-title text-red">Cảnh báo!</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-12">
                   Bạn muốn xóa đánh giá của @Model.HoVaTen
                </div>
            </div>
        </div>
        <div class="modal-footer pull-right">
            <input type="hidden" asp-for="Id" />
            @Html.AntiForgeryToken()
            <button type="button" data-dismiss="modal" class="btn btn-danger">Hủy</button>
            <button type="submit" class="btn btn-primary">Xác nhận</button>
        </div>
    </form>

</div>