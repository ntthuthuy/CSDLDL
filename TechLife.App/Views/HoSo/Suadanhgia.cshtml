@model TechLife.Model.DanhGiaModel
<div class="modal-content">
    <form method="post" action="/HoSo/Suadanhgia/">
        <div class="modal-header">
            <h4 class="modal-title">Sửa đánh giá của @Model.HoVaTen</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="position-relative form-group">
                        <label class="control-label">Số sao đánh giá</label>
                        <select class="form-control" asp-items="ViewBag.listTieuChuanDanhGia" asp-for="SoSao">
                        </select>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="position-relative form-group">
                        <label class="control-label">Ghi chú</label>
                        <textarea asp-for="GhiChu" class="form-control"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer pull-right">
            <input type="hidden" asp-for="Id" />
            @Html.AntiForgeryToken()
            <button type="button" data-dismiss="modal" class="btn btn-danger">Hủy</button>
            <button type="submit" class="btn btn-primary">Lưu</button>
        </div>
    </form>

</div>