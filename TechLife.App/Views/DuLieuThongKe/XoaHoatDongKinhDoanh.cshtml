@model TechLife.Model.HoatDongKinhDoanh.HoatDongKinhDoanhDeleteRequest

<form id="modal-form">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title text-red">
                <strong>Cảnh báo!</strong>
            </h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="form-row">
                <div class="col-md-12">
                    <div class="form-group text-center">
                        <strong>Xóa toàn bộ dữ liệu tháng @Model.Thang năm @Model.Nam</strong>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer float-right">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Thang" />
            <input type="hidden" asp-for="Nam" />
            <button type="button" class="btn btn-danger" data-dismiss="modal" aria-label="Close">
                Hủy
            </button>
            <button type="submit" class="btn btn-success">Xác nhận</button>
        </div>
    </div>
</form>
<script>
    $('#modal-form').on('submit', function(e) {
        e.preventDefault();
        let formData = new FormData(this);
        $.ajax({
            url: '/DuLieuThongKe/XoaHoatDongKinhDoanh',
            type: 'POST',
            data: formData,
            contentType: false,
            processData: false,
            success: function(data) {
                hideLoading();
                if (data.isSuccessed) {
                    dropModal();
                    showNotification(data);
                    let element = document.getElementById('view-content');
                    let params = window.location.search;
                    loadContent(`/DuLieuThongKe/HoatDongKinhDoanhList/${params}`, element);
                } else {
                    showNotification(data);
                }
            },
            error: function(xhr) {
                hideLoading();
                showNotification({ isSuccessed: false, message: xhr.responseText });
            }
        })
    })
</script>