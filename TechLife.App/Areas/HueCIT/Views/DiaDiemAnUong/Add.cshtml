                                                                <span asp-validation-for="DuLieuDuLich.SoCVDatChuan" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Ngày công nhận</label>
                                                                <input asp-for="DuLieuDuLich.NgayCVDatChuan" class="form-control" />
                                                                <span asp-validation-for="DuLieuDuLich.NgayCVDatChuan" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <hr />
                                                    <div class="form-row">
                                                        <div class="col-md-6">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Tổng số vốn đầu tư ban đầu (1000 VNĐ)</label>
                                                                <input asp-for="DuLieuDuLich.TongVonDauTuBanDau" value="0" class="form-control text-right" />
                                                                <span asp-validation-for="DuLieuDuLich.TongVonDauTuBanDau" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Tổng số vốn đầu tư bổ sung</label>
                                                                <input asp-for="DuLieuDuLich.TongVonDauTuBanDau" value="0" class="form-control text-right" />
                                                                <span asp-validation-for="DuLieuDuLich.TongVonDauTuBanDau" class="text-danger"></span>
                                                            </div>
