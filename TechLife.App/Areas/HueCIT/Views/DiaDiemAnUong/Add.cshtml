                                                                <input asp-for="DuLieuDuLich.Fax" class="form-control" />
                                                                <span asp-validation-for="DuLieuDuLich.Fax" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Email</label>
                                                                <input asp-for="DuLieuDuLich.Email" class="form-control" />
                                                                <span asp-validation-for="DuLieuDuLich.Email" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Website</label>
                                                                <input asp-for="DuLieuDuLich.Website" class="form-control" />
                                                                <span asp-validation-for="DuLieuDuLich.Website" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="form-row">
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Giờ mở cửa</label>
                                                                <input asp-for="DuLieuDuLich.GioMoCua" class="form-control" />
                                                                <span asp-validation-for="DuLieuDuLich.GioMoCua" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Giờ đóng cửa</label>
                                                                <input asp-for="DuLieuDuLich.GioDongCua" class="form-control" />
                                                                <span asp-validation-for="DuLieuDuLich.GioDongCua" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Phục vụ</label>
                                                                <select class="form-control" asp-for="DuLieuDuLich.PhucVu" asp-items="ViewBag.listPhucVuDiaDiemAnUong">
                                                                </select>
                                                                <span asp-validation-for="DuLieuDuLich.PhucVu" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <hr />
                                                    <div class="form-row">
                                                        <div class="col-md-6">
                                                            <div class="position-relative form-group">
                                                                <label class="control-label">Công ty, đơn vị chủ quản </label>
                                                                <select asp-for="DuLieuDuLich.NhaCungCapId" asp-items="ViewBag.listNhaCungCap" class="form-control">
                                                                    <option value="0">Chọn</option>
                                                                </select>
                                                                <span asp-validation-for="DuLieuDuLich.NhaCungCapId" class="text-danger"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-row">
                                                        <div class="col-md-6">
