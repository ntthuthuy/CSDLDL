                                                                                    <input hidden class="form-control" type="text" asp-for="@Model.DuLieuDuLich.DSVanBan[i].GiayPhepId" />
                                                                                    <input hidden class="form-control" type="text" asp-for="@Model.DuLieuDuLich.DSVanBan[i].TenGoi" />
                                                                                    @Model.DuLieuDuLich.DSVanBan[i].TenGoi
                                                                                </td>

